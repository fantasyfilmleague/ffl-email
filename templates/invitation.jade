extends layouts/base

include mixins/button

block content
  - var url = applicationUrl + '/invite?token=' + token;
  table(border='0', cellpadding='0', cellspacing='0', width='100%')
    tr
      td(align='center', style='font-family:Helvetica; font-size:34px; font-weight:500;') Fantasy Film League
  table(border='0', cellpadding='0', cellspacing='0', width='100%')
    tr
      td(align='center', style='font-family:Helvetica; font-size:22px; font-weight:500; padding:15px 0 0 0;') You've Been Invited to a League
  table(border='0', cellpadding='0', cellspacing='0', width='100%')
    tr
      td(align='center', style='font-family:Helvetica; font-size:18px; padding:5px 0 0 0;') #{league.name}
    tr
      td(align='center', style='font-family:Helvetica; font-size:18px; padding:15px 0 0 0;') By #{league.email}
  +button(url)
    span Accept Invitation
